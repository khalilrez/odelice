<%- include('head.ejs') %>

    <body class="sub_page">
        <%- include('navbar.ejs') %>

            <section class="cart_section layout_padding">

                <div class="container">
                    <div class="heading_container heading_center">
                        <h1>Login</h1>
                        <% if (locals.error) { %>
                            <p style="color: red;">
                                <%= error %>
                            </p>
                            <% } %>
                                <form action="/login" method="POST">
                                    <label for="customerPhone">Téléphone</label>
                                    <input type="text" class="form-control" name="customerPhone" required>
                                    <br>
                                    <label for="customerPassword">Mot de passe</label>
                                    <input type="password" class="form-control" name="customerPassword" required>
                                    <br>
                                    <input type="submit" class="btn btn-outline-primary" value="Login">
                                </form>
                                <p>Vous n'avez pas encore de compte? <a href="/register">S'inscrire</a></p>

                    </div>
                </div>
            </section>
            <%- include('foot.ejs') %>